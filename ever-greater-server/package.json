{
	"name": "ever-greater-server",
	"version": "1.0.0",
	"private": true,
	"main": "src/index.js",
	"type": "commonjs",
	"scripts": {
		"start": "node src/index.js",
		"dev": "node src/index.js",
		"test": "jest --detectOpenHandles",
		"test:watch": "jest --watch --detectOpenHandles",
		"test:coverage": "jest --coverage --detectOpenHandles"
	},
	"dependencies": {
		"bcryptjs": "^3.0.3",
		"connect-pg-simple": "^10.0.0",
		"cors": "^2.8.5",
		"dotenv": "^17.3.1",
		"express": "^4.19.2",
		"express-session": "^1.19.0",
		"pg": "^8.18.0",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@types/jest": "^30.0.0",
		"jest": "^30.2.0",
		"supertest": "^7.2.2"
	},
	"jest": {
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"testMatch": [
			"**/*.test.js"
		],
		"forceExit": true,
		"testTimeout": 10000
	}
}